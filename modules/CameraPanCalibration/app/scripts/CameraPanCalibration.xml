<application>
<name>Camera Pan Calibration App</name>

    <module>
        <name>CameraPanCalibration</name>
        <node>localhost</node>
    </module>
    
    <module>
        <name>yarpdataplayer</name>
        <node>localhost</node>
    </module>
    
    <module>
        <name>yarpview</name>
        <parameters>--name /leftImageInput</parameters>
        <node>localhost</node>
    </module>
    
     <module>
        <name>yarpview</name>
        <parameters>--name /rightImageInput</parameters>
        <node>localhost</node>
    </module>
    
     <module>
        <name>yarpview</name>
        <parameters>--name /leftImageOutput</parameters>
        <node>localhost</node>
    </module>
        
     <module>
        <name>yarpview</name>
        <parameters>--name /rightImageOutput</parameters>
        <node>localhost</node>
    </module>

    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/leftImageInput</to>
        <protocol>fast_tcp</protocol>
    </connection>
 
     <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/rightImageInput</to>
        <protocol>fast_tcp</protocol>
    </connection>
     
     <connection>
        <from>/CameraPanCalibration/leftImage:o</from>
        <to>/leftImageOutput</to>
        <protocol>fast_tcp</protocol>
    </connection>
         
     <connection>
        <from>/CameraPanCalibration/rightImage:o</from>
        <to>/rightImageOutput</to>
        <protocol>fast_tcp</protocol>
    </connection>
    
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/CameraPanCalibration/leftImage:i</to>
        <protocol>fast_tcp</protocol>
    </connection>
        
    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/CameraPanCalibration/rightImage:i</to>
        <protocol>fast_tcp</protocol>
    </connection>
  
</application>
